<%- include('../../partials/header.ejs') %>
    <h1>Edit Ramen</h1>
    <form action="/admin/ramen/update/<%= menu.id %>" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <label for="username">Name</label>
            <input type="text" id="username" name="name" class="form-control" value="<%= menu.name %>" required>
        </div>
        <div class="form-group">
            <label for="email">Price</label>
            <input type="number" id="email" name="price" class="form-control" value="<%= menu.price %>" required>
        </div>
        <div class="form-group mb-2">
            <label for="email">Image</label>
            <input type="file" id="email" name="image" class="form-control" required>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    <%- include('../../partials/footer.ejs') %>